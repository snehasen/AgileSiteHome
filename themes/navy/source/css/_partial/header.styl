header-padding-normal = 72px
header-padding-max = 30px
logo-size-width = 250px
logo-size-height = 68px

#header
  position: relative
  padding: 10px 0
  @media print
    display: none
  .home &
    padding: header-padding-max 0

#header-inner
  position: relative

#logo-wrap
  text-align: center

#logo
  hide-text()
  background: url("/images/logo.png") no-repeat
  width: logo-size-width
  height: logo-size-height
  background-size: @width @height
  display: inline-block
  text-decoration: none
  @media mq-normal
    float: left
  @media (max-width:640px)
    margin-left: 15%
	width: 90%
	background-size: 90% auto
	
#main-nav
  display: none
  float: left
  padding-left: 20px
  @media mq-normal
    display: block

.main-nav-item
  float: left

.main-nav-link
  color: #000
  text-decoration: none
  line-height: logo-size-height
  opacity: 0.7
  transition: 0.2s
  font-family: font-title
  text-transform: none
  display: block
  padding: 0 20px
  &:hover
    opacity: 1
    color: color-link-hover

#search-btn-wrap
  display: none
  float: right
  margin-right: 15px
  @media mq-normal
    display: block

#search-btn
  cursor: pointer

#lang-select-wrap
  display: none
  position: relative
  float: right
  @media mq-normal
    display: block

#lang-select-label
  color: #fff
  opacity: 0.7
  font-family: font-title
  line-height: logo-size
  span
    padding-left: 8px
  i
    opacity: 0.7

#lang-select
  opacity: 0
  position: absolute
  top: 0
  left: 0
  width: 100%
  height: 100%
  -webkit-appearance: menulist-button
  font-size: inherit